$body-font = 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif
$logo-font = 'Dosis', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif
$code-font = 'Roboto Mono', Monaco, courier, monospace

$body-font-size = 15px
$code-font-size = .8em
$line-height = 1.5

$dark   = #2c3e50
$medium = #34495e
$light  = #7f8c8d
$green  = #42b983
$yellow = #f3b967
$border = #ececec
$grey   = #c4c4c4
$codebg = #f8f8f8
$red = #ff6666
$black = #4a4a4a

$greyFont = #999

$radius = 2px

$transition = all .5s ease

$body-width = 1000px

//盒子阴影 对应普通和hover状态
$box-shadow-light = 0 0 5px rgba(0,0,0,0.4)
$box-shadow-weight = 0 0 8px rgba(0,0,0,0.5)