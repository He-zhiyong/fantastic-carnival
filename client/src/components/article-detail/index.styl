@import '../../styl/variable.styl'
.wrapper
  flex-grow 1
  flex-shrink 1
  margin-right 20px
  box-shadow $box-shadow-light
  padding 15px 35px
  max-width 830px
  header
    border-bottom 1px solid $border
    padding-bottom 10px
    margin-bottom 10px
  .title
    padding 10px 0
    font-size 24px
    font-weight 700
    color rgba(0,0,0,0.85)
    line-height $line-height
    text-indent 1em
  .info
    color $greyFont
    line-height $line-height
    font-size 14px
    .tagItem
      display inline-block
      background rgba(1,126,102,0.08)
      text-align center
      padding 0 6px
      height 22px
      line-height @height
      color $green
      transition all ease 0.1s
      cursor pointer
      margin-right 5px
      &:hover
        color #fff
        background #017E66
